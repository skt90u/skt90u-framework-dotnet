  <targets>
    <target name="debugFile" xsi:type="File" fileName="${basedir}/App_Data/Logs/${shortdate}/Debug.txt" />
    <target name="infoFile" xsi:type="File" fileName="${basedir}/App_Data/Logs/${shortdate}/Info.txt" />
    <target name="warnFile" xsi:type="File" fileName="${basedir}/App_Data/Logs/${shortdate}/Warn.txt" />
    <target name="errorFile" xsi:type="File" fileName="${basedir}/App_Data/Logs/${shortdate}/Error.txt" />
  </targets>

  <rules>
    <logger name="*" levels="Debug" writeTo="debugFile" />
    <logger name="*" levels="Info" writeTo="infoFile" />
    <logger name="*" levels="Warn" writeTo="warnFile" />
    <logger name="*" levels="Error" writeTo="errorFile" />
