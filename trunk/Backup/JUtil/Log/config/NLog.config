<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

  <targets>
    <target name="debugFile" xsi:type="File" fileName="${basedir}/log/${shortdate}/Debug.txt" />
    <target name="infoFile" xsi:type="File" fileName="${basedir}/log/${shortdate}/Info.txt" />
    <target name="warnFile" xsi:type="File" fileName="${basedir}/log/${shortdate}/Warn.txt" />
    <target name="errorFile" xsi:type="File" fileName="${basedir}/log/${shortdate}/Error.txt" />
  </targets>

  <rules>
    <logger name="*" levels="Debug" writeTo="debugFile" />
    <logger name="*" levels="Info" writeTo="infoFile" />
    <logger name="*" levels="Warn" writeTo="warnFile" />
    <logger name="*" levels="Error" writeTo="errorFile" />
  </rules>
</nlog>
